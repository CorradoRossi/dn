
# Daily Notes Aliases
dn() {
  echo " * $1" >> ~/dn/$(date "+%Y-%m-%d")
}

dno() {
  echo " * $2" >> ~/dn/$1
}

dnt() {
  echo $(date "+%Y-%m-%d")
  cat ~/dn/$(date "+%Y-%m-%d")
}

dnview() {
  find ~/dn/$1* -type f -exec basename {} \; -exec cat {} \;
}

# edit note with vscode (relies on having already setup vscode alias(es), mine is 'code')
dntvsc() {
  echo $(date "+%Y-%m-%d")
  code ~/dn/$(date "+%Y-%m-%d")
}